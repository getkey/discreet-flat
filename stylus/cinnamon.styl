@require "colors.styl"

/* ###################################################################
 * Section common with Gnome Shell
 * ... contains a few cinnamon specific styles (rare occurrences) 
 * ###################################################################*/
stage
	font-family: "Droid Sans", "Open Sans", sans, sans-serif

.cinnamon-link
	color: #0000ff
	text-decoration: underline

.cinnamon-link:hover
	color: #0000e0

.label-shadow
	color: rgba(0,0,0,0.5)


StScrollView.vfade
	-st-vfade-offset: 68px

StScrollView StScrollBar
	min-width: 12px
	min-height: 16px


StScrollBar
	padding: 0px

	StBin#trough
		background-color: #181818
		border: 1px solid #333
		border-radius: 4px

	StButton#vhandle,
	StButton#hhandle
		background-color: $light
		border-radius: 4px

		&:hover
			background-color: #383838

.separator
	-gradient-height: 2px
	-gradient-start: rgba(85,85,85,1)
	-gradient-end: #555555
	-margin-horizontal: 1.5em
	height: 1em

.slider
	height: 1em
	min-width: 15em
	-slider-height: 0.3em
	-slider-background-color: #666666
	-slider-border-color: #555555
	-slider-active-background-color: #CCCCCC
	-slider-active-border-color: #DDDDDD
	-slider-border-width: 1px
	-slider-handle-radius: 0.5em

#Tooltip
	background-color: $dark
	color: white
	font-size: 8.5pt
	font-weight: normal
	padding: 2px 12px
	border-radius: 1px
	box-shadow: 1px 1px 2px $light

@require "buttons.styl"

/* ===================================================================
 * PopupMenu (popupMenu.js) 
 * ===================================================================*/
 /* .popup-menu-boxpointer and .popup-menu are kept for compatibility
	with cinnamon version under 3.2. Use .menu in version 3.2 and above */
.popup-menu-boxpointer
	-arrow-border-radius: 4px
	-arrow-background-color: $dark
	-arrow-border-width: 1px
	-arrow-border-color: $light
	-arrow-base: 20px
	-arrow-rise: 8px

.popup-menu
	color: #ffffff
	font-size: 9.5pt
	min-width: 100px

.menu
	border-radius: 2px
	background-color: $dark
	color: #ffffff
	font-size: 9.5pt
	min-width: 100px

.popup-menu-arrow
	icon-size: 1.14em

.popup-submenu-menu-item:open
	background-color: $dark

.popup-sub-menu
	background-color: $light
	box-shadow: 0 0 4px $dark inset

.popup-sub-menu .popup-menu-item:ltr
	padding-right: 1.75em

.popup-sub-menu .popup-menu-item:rtl
	padding-left: 1.75em

.popup-sub-menu StScrollBar

.popup-sub-menu StScrollBar StBin#trough

.popup-sub-menu StScrollBar StBin#vhandle

.popup-combo-menu
	background-color: rgba(0,0,0,0.9)
	padding: 1em 0em
	color: #ffffff
	font-size: 10.5pt
	border: 1px solid #5f5f5f
	border-radius: 4px

/* The remaining popup-menu sizing is all done in ems, so that if you
 * override .popup-menu.font-size, everything else will scale with it.
 */
.popup-menu-content
	padding: 1em 0em

.popup-menu-item
	padding: .4em 1em
	spacing: 1em

.popup-menu-item:active
	background-color: $light

.popup-menu-item:insensitive
	color: #9f9f9f

.popup-image-menu-item

.popup-combobox-item
	spacing: 1em

.popup-separator-menu-item/* From Flatty 1.1 http://cinnamon-spices.linuxmint.com/themes/view/142 */
	height: 1px
	width: 1em
	border: 0px solid rgba(230,230,230,0.1)
	border-bottom-width: 1px
	box-shadow: inset 0px 1px 2px rgba(0,0,0,0.2)

.popup-alternating-menu-item:alternate
	font-weight: bold

.popup-slider-menu-item
	height: 1em
	min-width: 15em
	-slider-height: 0.3em
	-slider-background-color: #666666
	-slider-border-color: #666
	-slider-active-background-color: #CCCCCC
	-slider-active-border-color: #ccc
	-slider-border-width: 1px
	-slider-handle-radius: 0.5em

.popup-device-menu-item
	spacing: .5em

.popup-inactive-menu-item
	font-weight: normal
	color: #999

.popup-subtitle-menu-item
	font-weight: bold

.popup-menu-icon
	icon-size: 1.1em

/* Switches (to be used in menus) */
.toggle-switch
	width: 20px
	height: 20px

.toggle-switch-us, .toggle-switch-intl
	background-image: url("toggle-off.svg")

.toggle-switch-us:checked, .toggle-switch-intl:checked
	background-image: url("toggle-on.svg")


.nm-menu-item-icons
	spacing: .5em

/* ===================================================================
 * Panel (panel.js)
 * ===================================================================*/
#panel
	color: #ffffff
	background-color: $dark
	font-size: 8.5pt
	font-weight: bold
	height: 25px
	width: 32px

#panel:highlight
	background-color: #aa5555

.panel-dummy
	background-color: rgba(50, 50, 50, 0.4)

.panel-dummy:entered
	background-color: rgba(255, 35, 35, 0.4)

.panelLeft, .panelCenter, .panelRight
	spacing: 3px

.panelLeft:dnd, .panelCenter:dnd, .panelRight:dnd
	background-color: rgba(255,0,0,0.04)

.panelLeft:ltr
	padding-right: 4px

.panelLeft:rtl
	padding-left: 4px

.panelRight:ltr
	padding-left: 0px
	spacing: 0px

.panelRight:rtl
	padding-right: 0px
	spacing: 0px

.panelLeft.vertical
	padding: 0px

.panelRight.vertical
	padding: 0px

.panelCenter.vertical
	padding-left: 0px
	padding-right: 0px

.panelLeft.vertical:dnd

.panelCenter.vertical:dnd

.panelRight.vertical:dnd

.panel-top

.panel-bottom

.panel-left

.panel-right

.panel-status-button
	border: 0px solid #8b8b8b
	-natural-hpadding: 3px
	-minimum-hpadding: 3px
	font-weight: bold
	color: #ccc
	height: 22px

.panel-status-button:hover
	color: white

.system-status-icon
	padding-left: 0px
	padding-right: 0px
	spacing: 0px
	margin: 0px


.panel-corner
	-panel-corner-radius: 0px
	-panel-corner-background-color: black
	-panel-corner-inner-border-width: 2px
	-panel-corner-inner-border-color: transparent
	-panel-corner-outer-border-width: 1px
	-panel-corner-outer-border-color: #536272

.panel-corner:active,
.panel-corner:overview,
.panel-corner:focus
	-panel-corner-inner-border-color: rgba(255,255,255,0.8)

#appMenu
	spacing: 4px

.panel-button #appMenuIcon
	app-icon-bottom-clip: 1px

.panel-button:active #appMenuIcon,
.panel-button:checked #appMenuIcon,
.panel-button:focus #appMenuIcon
	app-icon-bottom-clip: 2px

.panel-button
	-natural-hpadding: 6px
	-minimum-hpadding: 2px
	font-weight: bold
	color: #ccc
	transition-duration: 100

.panel-button:hover
	color: white
	text-shadow: black 0px 2px 2px

.panel-button:active,
.panel-button:overview,
.panel-button:focus

.panel-button:active > .system-status-icon,
.panel-button:checked > .system-status-icon,
.panel-button:focus > .system-status-icon

.panel-menu
	-boxpointer-gap: 4px

.popup-menu-item-dot

.system-status-icon
	icon-size: 1.15em

@require "overview.styl"
@require "notifications.styl"
@require "looking_glass.styl"


@require "alt_tab.styl"

@require "modal_dialogs.styl"

@require "run_dialog.styl"
@require "magnifier.styl"


/* ###################################################################
 * Cinnamon Specific Section 
 * ###################################################################*/
/* ===================================================================
 * Menu (menu.js)
 * ===================================================================*/
/* Main menu title */

.menu-favorites-box
	margin: auto
	padding: 10px
	border-radius: 3px
	background: #383838

.menu-favorites-button
	padding-top: 10px
	padding-left: 10px
	padding-right: 10px
	padding-bottom: 10px

.menu-favorites-button:hover
	border-radius: 3px
	background: #282828

.menu-places-box
	margin: auto
	padding: 10px
	border: 0px solid #666

.menu-places-button
	padding-top: 10px
	padding-left: 10px
	padding-right: 10px
	padding-bottom: 10px

.menu-categories-box
	padding-top: 10px
	padding-left: 30px
	padding-right: 30px
	padding-bottom: 10px

.menu-applications-inner-box
	padding-top: 10px
	padding-left: 10px
	padding-right: 10px
	padding-bottom: 0px

.menu-applications-outer-box
	padding-top: 10px
	padding-left: 10px
	padding-right: 10px
	padding-bottom: 0px

.menu-application-button
	padding-top: 7px
	padding-left: 7px
	padding-right: 7px
	padding-bottom: 7px

.menu-application-button:highlighted
	/* This style is used in menu application buttons for applications which were newly installed */
	font-weight: bold

.menu-application-button-selected
	padding-top: 7px
	padding-left: 7px
	padding-right: 7px
	padding-bottom: 7px
	color: white
	background: $light
	border-radius: 3px

.menu-application-button-selected:highlighted
	/* This style is used in menu application buttons for applications which were newly installed */
	font-weight: bold

.menu-application-button-label:ltr
	padding-left: 5px

.menu-application-button-label:rtl
	padding-right: 5px

.menu-category-button
	padding-top: 7px
	padding-left: 7px
	padding-right: 7px
	padding-bottom: 7px

.menu-category-button-greyed
	padding-top: 7px
	padding-left: 7px
	padding-right: 7px
	padding-bottom: 7px
	color: #9C9C9C
	font-style: italic

.menu-category-button-selected
	padding-top: 7px
	padding-left: 7px
	padding-right: 7px
	padding-bottom: 7px
	color: white
	background: $light
	border-radius: 3px

.menu-category-button-label:ltr
	padding-left: 5px

.menu-category-button-label:rtl
	padding-right: 5px


.menu-category-button-button:hover
	background-color: #969696
	border-radius: 8px

/* Name and description of the currently hovered item in the menu
 * This appears on the bottom right hand corner of the menu*/
.menu-selected-app-box
	padding-right: 30px
	padding-left: 28px
	text-align: right
	height: 30px


.menu-selected-app-box:rtl
	padding-top: 10px
	height: 30px


.menu-selected-app-title
	font-weight: bold

.menu-selected-app-description
	max-width: 150px

.menu-search-box:ltr
	padding-left: 30px

.menu-search-box:rtl
	padding-right: 30px

#menu-search-entry
	padding: 5px
	border-radius: 2px
	color: rgb(128, 128, 128)
	background: #eaeaea
	box-shadow: 0 0 3px black inset
	selected-color: black
	caret-color: rgb(128, 128, 128)
	caret-size: 1px
	width: 250px
	height: 15px
	transition-duration: 300

#menu-search-entry:focus,
#menu-search-entry:hover

#menu-search-entry:hover
	transition-duration: 300

#menu-search-entry:focus
	color: rgb(64, 64, 64)
	font-weight: bold
	transition-duration: 0

.menu-search-entry-icon
	icon-size: 1.2em
	color: #8d8f8a

