// windowList.js

@require "../colors.styl"

.window-list-box
	spacing: 2px
	padding-left: 10px
	padding-top: 1px

	.window-list-item-box
		background-gradient-direction: horizontal
		background-gradient-start: #363636
		background-gradient-end: $dark
		border-radius: 0 0 0 5px
		border: 0px solid #484848
		border-left-width: 1px
		transition-duration: 100
		color: $text

		&:active, &:checked, &:focus
			background-gradient-start: #5a5a5a
			background-gradient-end: #505050
			box-shadow: 0 0 3px #141414 inset
			border: 0 solid black
			padding-left: 1px
			border-radius: 0 0 3px 3px

		&:active:hover, &:checked:hover, &:focus:hover
			background-gradient-start: #6a6a6a
			background-gradient-end: #606060
			border-bottom: none

		&:hover
			background-gradient-start: #404040
			background-gradient-end: #303030
			border-radius: 0 0 0 3px
			color: #e8e8e8
			border-color: #4b4b4b
			border-bottom: 0px

